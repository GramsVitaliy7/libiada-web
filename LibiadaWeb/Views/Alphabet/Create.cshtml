@model LibiadaWeb.alphabet

@{
    ViewBag.Title = "Алфавиты";
}

<h2>Создание</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Алфавит</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.chain_id, "Принадлежит цепочке")
        </div>
        <div class="editor-field">
            @Html.DropDownList("chain_id", String.Empty)
            @Html.ValidationMessageFor(model => model.chain_id)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.element_id, "Элемент")
        </div>
        <div class="editor-field">
            @Html.DropDownList("element_id", String.Empty)
            @Html.ValidationMessageFor(model => model.element_id)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.number,"Номер")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.number)
            @Html.ValidationMessageFor(model => model.number)
        </div>
        <p>
            <input type="submit" value="Создать" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Назад к списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
