@using Newtonsoft.Json
@model dynamic

@{
    ViewBag.Title = "Attributes check";
}

<script>
    "use strict";

    var data = @Html.Raw(JsonConvert.SerializeObject(ViewBag.data));
    GenesImportController(data);
</script>

<h2>Attributes check</h2>

@using (Html.BeginForm("Index", "AttributesCheck", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div ng-app="GenesImport">
        <div class="form-horizontal" ng-controller="GenesImportCtrl">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Partial("_LocalFile")
            @Html.Partial("_MattersTable")
            @Html.Partial("_MattersSubmit")
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/functions")
    @Scripts.Render("~/bundles/controllers/genesImport")
}
