@using IvtLibrary.Helpers
@model dynamic

@{
    ViewBag.Title = "Вычисление бинарных характеристик";
}

<h2>Вычисление бинарных характеристик</h2>
@using (Html.BeginForm())
{
    <table>
        <tr>
            <th>
                Название объекта
            </th>
            <th>
                Тип цепочки
            </th>
            <th>
                Форма записи
            </th>
            <th>
                Разнородность
            </th>
            <th>
                Дата создания
            </th>
            
        </tr>
        @{
            List<MvcHtmlString> chainsList = Html.RadioButtonGroup("chainId", (List<SelectListItem>) ViewBag.chainsList);
            int i = 0;

            foreach (var item in ViewBag.chains)
            {
                <tr>
                    <td>
                        @chainsList[i]
                    </td>
                    <td>
                        @item.matter.nature.name
                    </td>
                    <td>
                        @item.notation.name
                    </td>
                    <td>
                        @{
                            string b = "";
                            if (item.dissimilar)
                            {
                                b = "Разнородная";
                            }
                            i = i + 1;
                        }
                        @b
                    </td>
                    <td>
                        @item.creation_date
                    </td>
                </tr>
            }
        }

    </table>
    <br/>
    @Html.Label("Характеристика:")
    <br/>
    <select name="characteristicId" id="characteristicId">
        @foreach (var option in ViewBag.characteristicsList)
        {
            <option value="@option.Value">@option.Text</option>
        }
    </select>
    <br/>
    @Html.Label("Привязка:")
    <br/>
    <select name="linkUp">
        @foreach (var option in ViewBag.linkUpsList)
        {
            <option value="@option.Value">@option.Text</option>
        }
    </select>
    <br/>
    <br/>
    <input type="submit" value="Вычислить" />
}