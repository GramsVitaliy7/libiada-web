@model dynamic

@{
    ViewBag.Title = "Результаты вычисления бинарной характеристики";
}

<h2>@ViewBag.chainName</h2>
<h2>@ViewBag.characteristicName</h2>
<h2>@ViewBag.notationName</h2>

@if (!ViewBag.isFilter)
{
    <table>
        <tr>
            <th>
                Первый элемент\Второй элемент
            </th>
            @for (int k = 0; k < ViewBag.elements.Count; k++)
            {
                <th>
                    @ViewBag.elements[k].name
                </th>
            }
        </tr>
        @for (int i = 0; i < ViewBag.elements.Count; i++)
        {
            <tr>
                <td>
                    @ViewBag.elements[i].name
                </td>
                @for (int j = 0; j < ViewBag.elements.Count; j++)
                {
                    <td>
                        @ViewBag.characteristics[i * ViewBag.elements.Count + j].value
                    </td>
                }
            </tr>
        }
    </table>
}
else
{
    <table>
        @for (int l = 0; l < ViewBag.filteredResult.Count; l++)
        {
            <tr>
                <td>
                    @ViewBag.firstElements[l].value
                </td>
                <td>
                    @ViewBag.secondElements[l].value
                </td>
                <td>
                    @ViewBag.filteredResult[l].value
                </td>
            </tr>
        }
    </table>
}