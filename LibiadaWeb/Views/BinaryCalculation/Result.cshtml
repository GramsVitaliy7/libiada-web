@model dynamic

@{
    ViewBag.Title = "Результаты вычисления бинарной характеристики";
}

<h2>@ViewBag.chainName</h2>
<h2>@ViewBag.characteristicName</h2>
<h2>@ViewBag.notationName</h2>

@if (!ViewBag.isFilter)
{
    <table>
        <tr>
            <th>
                Первый элемент\Второй элемент
            </th>
            @foreach (var elementName in ViewBag.elementNames)
            {
                <th>
                    @elementName
                </th>
            }
        </tr>
        @for (int i = 0; i < ViewBag.characteristics.Count; i++)
        {
            <tr>
                <td>
                    @ViewBag.elementNames[i]
                </td>
                @foreach (var characteristic in ViewBag.characteristics[i])
                {
                    <td>
                        @characteristic
                    </td>
                }
            </tr>
        }
    </table>
}
else
{
    <table>
        @foreach (var ch in ViewBag.characteristics)
        {
            <tr>
                <td>
                    @ViewBag.alphabet[ch.Key.i]
                </td>
                <td>
                    @ViewBag.alphabet[ch.Key.j]
                </td>
                <td>
                    @ch.Value
                </td>
            </tr>
        }
    </table>
}