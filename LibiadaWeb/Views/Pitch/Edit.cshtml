@model LibiadaWeb.pitch

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>pitch</legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            @Html.LabelFor(model => model.octave)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.octave)
            @Html.ValidationMessageFor(model => model.octave)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.midinumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.midinumber)
            @Html.ValidationMessageFor(model => model.midinumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.instrument)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.instrument)
            @Html.ValidationMessageFor(model => model.instrument)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.note_id, "note")
        </div>
        <div class="editor-field">
            @Html.DropDownList("note_id", String.Empty)
            @Html.ValidationMessageFor(model => model.note_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.accidental_id, "accidental")
        </div>
        <div class="editor-field">
            @Html.DropDownList("accidental_id", String.Empty)
            @Html.ValidationMessageFor(model => model.accidental_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.note_symbol_id, "note_symbol")
        </div>
        <div class="editor-field">
            @Html.DropDownList("note_symbol_id", String.Empty)
            @Html.ValidationMessageFor(model => model.note_symbol_id)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
