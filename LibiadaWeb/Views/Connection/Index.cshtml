@model IEnumerable<LibiadaWeb.connection>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            chain1
        </th>
        <th>
            chain
        </th>
        <th>
            connection_type
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.chain1.building)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.chain.building)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.connection_type.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
