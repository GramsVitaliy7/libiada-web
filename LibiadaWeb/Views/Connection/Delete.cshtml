@model LibiadaWeb.connection

@{
    ViewBag.Title = "Связи";
}

<h2>Удаление</h2>

<h3>Вы действительно хотите удалить данную связь?</h3>
<fieldset>
    <legend>Связь</legend>

    <div class="display-label">Родительская цепочка</div>
    <div class="display-field">
        @Model.chain1.building.ToString().Substring(0,20)
    </div>

    <div class="display-label">Дочерняя цепочка</div>
    <div class="display-field">
        @Model.chain.building.ToString().Substring(0,20)
    </div>

    <div class="display-label">Тип связи</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.connection_type.name)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Удалить" /> |
        @Html.ActionLink("Назад к списку", "Index")
    </p>
}
