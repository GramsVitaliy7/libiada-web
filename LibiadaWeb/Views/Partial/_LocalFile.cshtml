<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <label>
            <input type="checkbox" name="localFile" ng-model="localFile" />
            Load sequence from local file
        </label>
    </div>
</div>
<div class="form-group" ng-show="localFile">
    <label class="control-label col-md-2" for="file">Sequence file:</label>
    <div class="col-md-10">
        <input type="file" name="file" id="file"/>
    </div>
</div>