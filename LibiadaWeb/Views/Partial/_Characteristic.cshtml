@using LibiadaWeb.Helpers

<br />
<div class="form-group">
    <label class="control-label col-md-2" for="characteristic">Characteristic:</label>
    <div class="col-md-10">
        <select class="form-control" title="Characteristic" ng-model="$ctrl.characteristic.characteristicType" ng-options="c.Text for c in $ctrl.characteristicTypes" ng-change="$ctrl.selectLink($ctrl.characteristic)" id="characteristic"></select>
        <input type="hidden" name="characteristicId" ng-value="$ctrl.characteristic.characteristicType.Value" />
    </div>
</div>
<div class="form-group" ng-show="$ctrl.isLinkable($ctrl.characteristic)">
    <label class="control-label col-md-2" for="link">Link:</label>
    <div class="col-md-10">
        <select class="form-control" title="Link" ng-model="$ctrl.characteristic.link" ng-options="l.Text for l in $ctrl.characteristic.characteristicType.CharacteristicLinks" id="link"></select>
        <input type="hidden" name="linkId" ng-value="$ctrl.characteristic.link.Value" />
        <input type="hidden" name="characteristicLinkId" ng-value="$ctrl.characteristic.link.CharacteristicLinkId" />
    </div>
</div>
@if (AccountHelper.IsAdmin())
{
    <div class="form-group">
        <label class="control-label col-md-2" for="notation">Notation:</label>
        <div class="col-md-10">
            <select class="form-control" title="Notation" ng-model="$ctrl.characteristic.notation" ng-options="n.Text for n in $ctrl.notations | filter:{ Nature: $ctrl.nature }" id="notation"></select>
        </div>
    </div>
}
<input type="hidden" name="notation" ng-value="$ctrl.characteristic.notation.Value" />

<div ng-switch="$ctrl.nature">
    <div ng-switch-when="@((byte)Nature.Literature)">
        <div class="form-group">
            <label class="control-label col-md-2" for="language">Language:</label>
            <div class="col-md-10">
                <select class="form-control" title="Language" ng-model="$ctrl.characteristic.language" ng-options="l.Text for l in $ctrl.languages" id="language"></select>
                <input type="hidden" name="language" ng-value="$ctrl.characteristic.language.Value" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="translator">Translator:</label>
            <div class="col-md-10">
                <select class="form-control" title="Translator" ng-model="$ctrl.characteristic.translator" ng-options="t.Text for t in $ctrl.translators" id="translator"></select>
                <input type="hidden" name="translator" ng-value="$ctrl.characteristic.translator.Value" />
            </div>
        </div>
    </div>
    <div ng-switch-when="@((byte)Nature.Genetic)">
    </div>
    <div ng-switch-when="@((byte)Nature.Music)">
    </div>
    <div ng-switch-when="@((byte)Nature.MeasurementData)">
    </div>
</div>
<hr />
<br />
