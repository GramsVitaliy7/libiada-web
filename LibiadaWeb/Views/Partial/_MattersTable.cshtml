@model IEnumerable<Matter>

<br />
@(Html.Label("matterIds", "Sequences", new { @class = "control-label" }))
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @(Html.DisplayNameFor(model => model.Name))
            </th>
            <th>
                @(Html.DisplayNameFor(model => model.Description))
            </th>
            <th>
                @(Html.DisplayNameFor(model => model.Created))
            </th>
            <th>
                @(Html.DisplayNameFor(model => model.Modified))
            </th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="matter in matters | filter:{Nature: natureId}">
            <td>
                <label>
                    @if (ViewBag.data["mattersCheckboxes"])
                    {
                        <input type="checkbox" ng-model="matter.Selected" name="matterIds" ng-value="matter.Value" ng-change="matterCheckChanged(matter)" ng-disabled="disableMattersSelect(matter)" />
                    }
                    else
                    {
                        <input type="radio" ng-model="matter.Selected" name="matterId" ng-value="matter.Value" ng-change="matterCheckChanged(matter)" />
                    }

                    {{matter.Text}}
                </label>
            </td>
            <td ng-bind="matter.Description" />
            <td ng-bind="matter.Created" />
            <td ng-bind="matter.Modified" />
        </tr>
    </tbody>
</table>
<br />