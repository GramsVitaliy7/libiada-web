@model IEnumerable<Matter>

<br/>
@(Html.Label("matterIds", "Sequences", new { @class = "control-label" }))
<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>
            @(Html.DisplayNameFor(model => model.Name))
        </th>
        <th>
            @(Html.DisplayNameFor(model => model.Description))
        </th>
        <th>
            @(Html.DisplayNameFor(model => model.Created))
        </th>
        <th>
            @(Html.DisplayNameFor(model => model.Modified))
        </th>
    </tr>
    </thead>
    <tbody>
    <tr ng-repeat="matter in matters | filter:{Nature: natureId}">
        <td>
            <label>
                <input type="checkbox" name="matterIds" ng-value="matter.Value" ng-model="matter.Selected" ng-change="matterCheckChanged(matter)" ng-disabled="disableMattersSelect(matter)" />
                {{matter.Text}}
            </label>
        </td>
        <td ng-bind="matter.Description"/>
        <td ng-bind="matter.Created"/>
        <td ng-bind="matter.Modified"/>
    </tr>
    </tbody>
</table>
<br/>