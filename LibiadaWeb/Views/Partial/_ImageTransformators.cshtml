<div ng-if ="fileType=='image'">
    <br />
    <div ng-repeat="transformator in selectedImageTransformators">
        <div class="form-group">
            <label class="control-label col-md-2" for="transformator">Transformator:</label>
            <div class="col-md-10">
                <select class="form-control" ng-model="transformator.value" ng-options="s.Value as s.Text for s in imageTransformators" id="transformator"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" class="btn btn-danger" ng-click="deleteImageTransformation(transformator)">Delete characteristic</button>
            </div>
        </div>
        <br />
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="button" class="btn btn-success" ng-click="addImageTransformation()">Add imageTranformation</button>
        </div>
    </div>
    <hr />
    <br />
</div>