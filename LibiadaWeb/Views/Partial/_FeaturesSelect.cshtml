@model CommonSequence

<br />
@Html.LabelFor(model => model.FeatureId, new { @class = "control-label col-md-2" })
<div ng-repeat="feature in features">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <label>
                <input type="checkbox" name="featureIds" ng-value="feature.Value" checked ng-model="feature.Selected" />
                {{feature.Text}}
            </label>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="button" class="btn btn-default" ng-click="setCheckBoxesState(features, false)" value="Uncheck All" />
        <input type="button" class="btn btn-success" ng-click="setCheckBoxesState(features, true)" value="Check All" />
    </div>
</div>
<hr/>
<br/>
