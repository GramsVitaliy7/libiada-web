@model IEnumerable<chain>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Создать", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.matter_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.notation_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.modified)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dissimilar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.piece_position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.remote_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.piece_type_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.remote_db_id)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.matter.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.notation.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.modified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dissimilar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.piece_position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.remote_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.piece_type.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.remote_db.name)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.id }) |
                @Html.ActionLink("Подробности", "Details", new { id = item.id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
