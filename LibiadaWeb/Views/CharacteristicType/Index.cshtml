@model IEnumerable<LibiadaWeb.characteristic_type>

@{
    ViewBag.Title = "Характеристики";
}

<h2>Перечень характеристик</h2>

<p>
    @Html.ActionLink("Создать", "Create")
</p>
<table>
    <tr>
        <th>
            Название
        </th>
        <th>
            Описание
        </th>
        <th>
            Группа характеристик
        </th>
        <th>
            Название класса калькулятора
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.characteristic_group.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.class_name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.id }) |
            @Html.ActionLink("Подробности", "Details", new { id=item.id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
