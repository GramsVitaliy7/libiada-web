@model IEnumerable<LibiadaWeb.element>

@{
    ViewBag.Title = "Элементы";
}

<h2>Перечень элементов</h2>

<p>
    @Html.ActionLink("Создать элемент", "Create")
</p>
<table>
    <tr>
        <th>
            Значение
        </th>
        <th>
            Название
        </th>
        <th>
            Описание
        </th>
        <th>
            Форма записи
        </th>
        <th>
            Природа
        </th>
        <th>
            Дата создания
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.notation.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.notation.nature.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.creation_date)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.id }) |
            @Html.ActionLink("Подробности", "Details", new { id=item.id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
