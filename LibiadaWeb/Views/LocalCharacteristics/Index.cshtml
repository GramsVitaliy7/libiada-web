@using IvtLibrary.Helpers
@model dynamic

@{
    ViewBag.Title = "Вычисление локальных характеристик";
}

<h2>Вычисление локальных характеристик</h2>

<script type="text/javascript">

    function AddAxis() {
        $("#axis").append(
        '<select name="characteristicIds">' +
            '@foreach (var option in ViewBag.characteristicsList)
             {<option value="@option.Value">@option.Text</option>}' +
        '</select>' +
        '<select name="linkUpIds">' +
            '@foreach (var option in ViewBag.linkUpsList)
             {<option value="@option.Value">@option.Text</option>}' +
        '</select>' +
        '<br/>');
        return false;
    }
</script>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <th>
                Название объекта
            </th>
        </tr>
        @{
            List<MvcHtmlString> mattersList = Html.RadioButtonGroup("matterId", (List<SelectListItem>) ViewBag.mattersList);

            foreach (var item in mattersList)
            {
                <tr>
                    <td>
                        @item
                    </td>
                </tr>
            }
        }
    </table>
    <br/>
    @Html.Label("Размер окна:")
    <input type ="number" id ="length" name = "length" value="50"/>
    @Html.Label("Размер шага:")
    <input type ="number" id ="step" name = "step" value="2"/>
    <br/>
    <input type="checkbox" name = "isDelta" id="isDelta" value="true">Дельта</input>
    <input type ="hidden" name="isDelta" id="isDelta" value="false" />
    <input type="checkbox" name = "isSort" id="isSort" value="true" >Сортировка</input>
    <input type="hidden" name = "isSort" id="isSort" value="false"/>
    <br/>
    <input type="button" onclick="AddAxis()" value="Добавить ось"/>
    <br/>
    <select name="notationId">
            @foreach (var option in ViewBag.notationsList)
            {
                <option value="@option.Value">@option.Text</option>
            }
    </select>
    <div id="axis"></div>
    <br/>
    <br/>
    <input type="submit" value="Вычислить" />
}