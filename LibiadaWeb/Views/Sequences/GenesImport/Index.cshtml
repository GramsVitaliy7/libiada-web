@model dynamic

@{
    ViewBag.Title = "Genes import";
}

<script>
    "use strict";

    var data = @Html.Raw(Json.Encode(ViewBag.data));
    GenesImportController(data);
</script>

<h2>Genes import</h2>

@using (Html.BeginForm("Index", "GenesImport", FormMethod.Post, new { enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    <div ng-app="GenesImport">
        <div class="form-horizontal" ng-controller="GenesImportCtrl">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Partial("_LocalFile")
            @Html.Partial("_MattersRadioTable")
            @Html.Partial("_MattersSubmit")
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/functions")
@Scripts.Render("~/bundles/controllers/genesImport")
}
