<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title — LibiadaWeb</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/base/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryDataTables")
        @Scripts.Render("~/bundles/highCharts")
        @Scripts.Render("~/bundles/procedures")
        @Scripts.Render("~/bundles/angular")

        @RenderSection("scripts", required: false)
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <nav>
                        <ul id="nav">
                                <li class="rootMenu">@Html.ActionLink("Домашняя страница", "Index", "Home")</li>
                                <li>Калькуляторы
                                    <ul>
                                        <li>@Html.ActionLink("Характеристики", "Index", "Calculation")</li>
                                        <li>@Html.ActionLink("Однородные характеристики", "Index", "CongenericCalculation")</li>
                                        <li>@Html.ActionLink("Бинарные характеристики", "Index", "BinaryCalculation")</li>
                                        <li>@Html.ActionLink("Локальные характеристики", "Index", "LocalCharacteristics")</li>
                                        <li>@Html.ActionLink("Кластеризация", "Index", "Clusterization")</li>
                                    </ul>
                                </li>
                                <li>Цепочки
                                    <ul>
                                        <li>@Html.ActionLink("Объекты", "Index", "Matter")</li>
                                        <li>@Html.ActionLink("Цепочки", "Index", "Chain")</li>
                                        <li>@Html.ActionLink("Элементы", "Index", "Element")</li>
                                    </ul>
                                </li>
                                <li>Справочные таблицы
                                    <ul>
                                        <li>@Html.ActionLink("Природа объектов", "Index", "Nature")</li>
                                        <li>@Html.ActionLink("Языки", "Index", "Language")</li>
                                        <li>@Html.ActionLink("Формы записи", "Index", "Notation")</li>
                                        <li>@Html.ActionLink("Привязки", "Index", "LinkUp")</li>
                                        <li>@Html.ActionLink("Группы характеристик", "Index", "CharacteristicGroup")</li>
                                        <li>@Html.ActionLink("Типы характеристик", "Index", "CharacteristicType")</li>
                                        <li>@Html.ActionLink("Сторонние БД", "Index", "RemoteDb")</li>
                                    </ul>
                                </li>
                                <li>Прочее
                                    <ul>
                                        <li>@Html.ActionLink("Проверка цепочек", "Index", "ChainCheck")</li>
                                        <li>@Html.ActionLink("Преобразование цепочек", "Index", "Transformation")</li>
                                    </ul>
                                </li>
                            </ul>
                    </nav>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year — LibiadaWeb</p>
                </div>
            </div>
        </footer>
    </body>
</html>
