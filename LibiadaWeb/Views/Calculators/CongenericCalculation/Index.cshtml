@using LibiadaWeb.Models
@model IEnumerable<Matter>

@{
    ViewBag.Title = "Congeneric sequences characteristics calculation";
}

<script type="text/javascript">
    "use strict";

    var data = @Html.Raw(Json.Encode(ViewBag.data));
</script>

<h2>Congeneric sequences characteristics calculation</h2>

@using (Html.BeginForm("Index", "CongenericCalculation", FormMethod.Post, new { enctype = "multipart/form-data", ng_app = "Calculation" }))
{
    <div class="form-horizontal" ng-controller="CalculationCtrl">
        <h4>Sequences and parameters</h4>
        <hr />
        @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.First().NatureId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" ng-model="natureId" ng-options="n.Value as n.Text for n in natures"></select>
                @Html.ValidationMessage("natureId", string.Empty, new { @class = "text-danger" })
            </div>
        </div>
        @Html.Label("matterIds", "Sequences", new { @class = "control-label" })
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Modified)
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="matter in matters | filter:{Nature: natureId}">
                    <td>
                        <label>
                            <input type="checkbox" name="matterIds" ng-value="matter.Value" />
                            {{matter.Text}}
                        </label>
                    </td>
                    <td ng-bind="matter.Description" />
                    <td ng-bind="matter.Created" />
                    <td ng-bind="matter.Modified" />
                </tr>
            </tbody>
        </table>
        @Html.Partial("_Characteristics")
        <div class="form-group">
            <div class="col-md-10">
                @Html.CheckBox("isSort")
                @Html.Label("isSort", "Sort results in descending order")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.CheckBox("theoretical")
                @Html.Label("theoretical", "Calculate theoretical rank distribution")
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Calculate" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/procedures")
    @Scripts.Render("~/bundles/controllers/calculation")
}
