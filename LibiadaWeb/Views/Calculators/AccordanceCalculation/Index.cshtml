@model dynamic

@{
    ViewBag.Title = "Accordance calculation";
}

<script type="text/javascript">
    "use strict";

    var data = @Html.Raw(Json.Encode(ViewBag.data));
    AccordanceController(data);
</script>

<h2>Accordance calculation</h2>

@using (Html.BeginForm())
{
    <div ng-app="Accordance">
        <div class="form-horizontal" ng-controller="AccordanceCtrl">
            <h4>Sequences and parameters</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Partial("_NatureSelect")
            @Html.Partial("_MattersCheckboxTable")
            @Html.Partial("_Characteristic")
            @Html.Label("calculationType", "Calculation type", new { @class = "control-label" })
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label>
                        <input type="radio" name="calculationType" value="Equality" checked />
                        Equality of elements
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label>
                        <input type="radio" name="calculationType" value="All" />
                        All-to-All
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label>
                        <input type="radio" name="calculationType" value="Specified" />
                        Specified
                    </label>
                </div>
            </div>
            <hr/>
            @Html.Partial("_MattersSubmit")
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/functions")
    @Scripts.Render("~/bundles/controllers/accordance")
}
