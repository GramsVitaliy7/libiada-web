@model dynamic

@{
    ViewBag.Title = "Accordance calculation";
}

@if (ViewBag.Error == null)
{
    <h2>Accordance calculation</h2>

    @ViewBag.matterNames[0]
    @ViewBag.matterNames[1]

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.Raw(ViewBag.characteristicName.Replace("  ", "<br/>"))
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < ViewBag.characteristics.Count; i++)
            {
                <tr>
                    <td>
                        @ViewBag.characteristics[i]
                    </td>
                </tr>
            }
        </tbody>
    </table>
}