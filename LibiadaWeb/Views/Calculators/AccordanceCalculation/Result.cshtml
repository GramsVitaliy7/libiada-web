@model dynamic

@{
    ViewBag.Title = "Accordance calculation";
}

@if (ViewBag.Error == null)
{
    <h2>Accordance calculation</h2>

    @ViewBag.matterNames[0]
    <br />
    @ViewBag.matterNames[1]

    if (ViewBag.calculationType == "Equality")
    {
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>
                    Element name
                </th>
                <th>
                    @Html.Raw(ViewBag.characteristicName.Replace("  ", "<br/>"))
                </th>
                <th>
                    @Html.Raw(ViewBag.characteristicName.Replace("  ", "<br/>"))
                    <br/>
                    Reverse order
                </th>
            </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < ViewBag.characteristics[0].Count; i++)
                {
                    <tr>
                        <td>
                            @ViewBag.alphabet[i]
                        </td>
                        <td>
                            @ViewBag.characteristics[0][i]
                        </td>
                        <td>
                            @ViewBag.characteristics[1][i]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}