@model dynamic

@{
    ViewBag.Title = "Genes similarity";
}

<script type="text/javascript">
    "use strict";

    var data = @Html.Raw(Json.Encode(ViewBag.data));
    GenesAlignmentController(data);
</script>

<h2>Genes similarity</h2>

@using (Html.BeginForm())
{
    <div ng-app="GenesAlignment">
        <div class="form-horizontal" ng-controller="GenesAlignmentCtrl">
            <h4>Sequences and parameters</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Partial("_MattersTable")
            @Html.Partial("_FeaturesSelect")
            @Html.Partial("_Characteristic")
            <div class="form-group">
                @Html.Label("maxDifference", "Maximum difference", new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    <input class="form-control" name="maxDifference" type="number" value="0" step="any" min="0"/>
                    @Html.ValidationMessage("maxDifference", "", new {@class = "text-danger"})
                </div>
            </div>

            <hr/>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label>
                        <input type="radio" name="excludeType" value="Exclude" checked />
                        Exclude similar genes
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label>
                        <input type="radio" name="excludeType" value="NotExclude"/>
                        Don't exclude similar genes
                    </label>
                </div>
            </div>

            @Html.Partial("_MattersSubmit")
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/functions")
    @Scripts.Render("~/bundles/controllers/genesAlignment")
}
