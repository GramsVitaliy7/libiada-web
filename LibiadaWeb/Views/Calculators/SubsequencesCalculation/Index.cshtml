@{
    ViewBag.Title = "Subsequences characteristics calculation";
}

@Html.Partial("_AngularControllerInitializer", "SubsequencesCalculationController")

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal" ng-app="libiada" ng-controller="SubsequencesCalculationCtrl">
        <h4>Sequences and parameters</h4>
        @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
        <matters-table matters="matters"
                       nature="nature"
                       groups="groups"
                       sequence-types="sequenceTypes"
                       maximum-selected-matters="maximumSelectedMatters">
        </matters-table>
        @Html.Partial("_FeaturesSelect")
        @Html.Partial("_Characteristics")
        @Html.Partial("_MattersSubmit")
    </div>
}
