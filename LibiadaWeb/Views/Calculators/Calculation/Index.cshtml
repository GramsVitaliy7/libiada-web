@model dynamic

@{
    ViewBag.Title = "Characteristics calculation";
}

@Html.Partial("_AngularControllerInitializer")

<h2>Characteristics calculation</h2>

@using (Html.BeginForm())
{
    <div ng-app="Calculation">
        <div class="form-horizontal" ng-controller="CalculationCtrl">
            <h4>Sequences and parameters</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Partial("_NatureSelect")
            @Html.Partial("_MattersTable")
            @Html.Partial("_Characteristics")
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.CheckBox("complementary", new { ng_model = "complementary" })
                    @Html.Label("complementary", "Calculate characteristic for complementary sequence")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.CheckBox("rotate", new { ng_model = "rotate" })
                    @Html.Label("rotate", "Rotate sequences cyclically")
                </div>
            </div>
            <hr />
            <div class="form-group" ng-show="rotate">
                @Html.Label("rotationLength", "Rotation length", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class="form-control" name="rotationLength" type="number" value="100" min="1"/>
                    @Html.ValidationMessage("rotationLength", "", new { @class = "text-danger" })
                </div>
            </div>
            <hr/>
            @Html.Partial("_MattersSubmit")
        </div>
    </div>
}
