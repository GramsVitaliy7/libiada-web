@model dynamic

@{
    ViewBag.Title = "Clusterization";
}

@Html.Partial("_AngularControllerInitializer")

<h2>Clusterization</h2>

@using (Html.BeginForm())
{
    <div ng-app="Calculation">
        <div class="form-horizontal" ng-controller="CalculationCtrl">
            <h4>Sequences and parameters</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Partial("_NatureSelect")
            @Html.Partial("_MattersTable")
            @Html.Partial("_Characteristics")
            <div class="form-group">
                @Html.Label("clustersCount", "Clusters count", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class="form-control" name="clustersCount" type="number" value="2" min="2" />
                    @Html.ValidationMessage("clustersCount", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("equipotencyWeight", "Equipotency weight", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class="form-control" name="equipotencyWeight" type="number" value="4" min="0" />
                    @Html.ValidationMessage("equipotencyWeight", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("normalizedDistanceWeight", "Normalized distance weight", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class="form-control" name="normalizedDistanceWeight" type="number" value="2" min="0" />
                    @Html.ValidationMessage("normalizedDistanceWeight", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("distanceWeight", "Distance weight", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class="form-control" name="distanceWeight" type="number" value="1" min="0" />
                    @Html.ValidationMessage("distanceWeight", "", new { @class = "text-danger" })
                </div>
            </div>
            <br/>
            @Html.Partial("_MattersSubmit")
        </div>
    </div>
}
