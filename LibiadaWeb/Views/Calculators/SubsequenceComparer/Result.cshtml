@{
    ViewBag.Title = "Subsequence comparer";
}

@if (ViewBag.Error == null)
{
    <h2>@ViewBag.Title</h2>

    @ViewBag.characteristicName

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Matter name
                </th>
                @for (int i = 0; i < ViewBag.mattersNames.Length; i++)
                {
                    <th>
                        @ViewBag.mattersNames[i]
                    </th>
                }
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < ViewBag.similarities.GetLength(0); i++)
            {
                <tr>
                    <td>
                        @ViewBag.mattersNames[i]
                    </td>

                    @for (int j = 0; j < ViewBag.similarities.GetLength(1); j++)
                    {
                        <td>
                            @ViewBag.similarities[i, j]
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
