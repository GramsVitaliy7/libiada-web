@{
    ViewBag.Title = "Order transformation visualization";
}

<h2>@ViewBag.Title</h2>

@Html.Partial("_AngularControllerInitializer", "OrderTransformationVisualizationController")

@using (Html.BeginForm())
{
    <div ng-controller="OrderTransformationVisualizationCtrl">
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Parameters</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2" for="length">Generated sequnces length:</label>
                <div class="col-md-10">
                    <input class="form-control" name="length" type="number" value="4" min="2" id="length" />
                    @Html.ValidationMessage("length", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label>
                        <input type="radio" name="multiThreading" id="multiThreading" value="false" checked />
                        Generate in one thread.
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label>
                        <input type="radio" name="multiThreading" id="multiThreading" value="true" />
                        Generate in multi thread.
                    </label>
                </div>
            </div>
            @Html.Partial("_MattersSubmit")
        </div>

    </div>
}

