@model dynamic

@{
    ViewBag.Title = "Genes distributions";
}

<h2>Genes distributions</h2>

@if (ViewBag.Error == null)
{
    <script type='text/javascript'>

    </script>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                @foreach (var res in ViewBag.result)
                {
                    <th colspan="4">
                        @res.MatterName
                    </th>
                }
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var res in ViewBag.result)
                {
                    <td colspan="4">
                        @res.Characteristic
                    </td>
                }
            </tr>
            @for (var i = 0; i < ViewBag.maxGenes; i++)
            {
                <tr>
                    @foreach (var res in ViewBag.result)
                    {
                        <td>
                            @res.GenesCharacteristics[i].Gene.PieceType.Name
                        </td>
                        <td>
                            @res.GenesCharacteristics[i].Gene.Product.Name
                        </td>
                        <td>
                            @foreach (var piece in res.GenesCharacteristics[i].Gene.Piece)
                            {
                                @piece.Start
                            }
                        </td>
                        <td>
                            @res.GenesCharacteristics[i].Characteristic
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryui")
    }
}
