@model dynamic

@{
    ViewBag.Title = "Sequences alignment";
}

<h2>Sequences alignment</h2>

@if (ViewBag.Error == null)
{
    <div>
        Alignment type: @ViewBag.validationType
    </div>

    <div>
        Optimal shift: @ViewBag.optimalRotation
    </div>
    if (ViewBag.sort)
    {
        <div>
            Characteristics sorted descending
        </div>
    }
    if (ViewBag.cyclicShift)
    {
        <div>
            Cyclic shift is used
        </div>
    }

    @ViewBag.firstSequenceName
    <br />
    @ViewBag.secondSequenceName
    <br />
    @ViewBag.characteristicName
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Distances
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var distance in ViewBag.distances)
            {
                <tr>

                    <td>
                        @distance
                    </td>

                </tr>
            }
        </tbody>
    </table>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/slider")
    }
}
