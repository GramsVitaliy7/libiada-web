@{
    ViewBag.Title = "Local characteristics";
}

<h2>@ViewBag.Title</h2>

@if (ViewBag.Error == null)
{
    for (int i = 0; i < ViewBag.characteristics.Count; i++)
    {
        <h3>Matter @ViewBag.matterNames[i]</h3>
        for (int j = 0; j < ViewBag.characteristics[i].Count; j++)
        {
            <h4>Notation: @ViewBag.notationNames[j]</h4>
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            Start
                        </th>
                        <th>
                            Length
                        </th>
                        <th>
                            @ViewBag.characteristicNames[j]
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int k = 0; k < ViewBag.characteristics[i][j].Count; k++)
                    {
                        <tr>
                            <td>
                                @ViewBag.starts[i][j][k]
                            </td>
                            <td>
                                @ViewBag.lengthes[i][j][k]
                            </td>
                            <td>
                                @ViewBag.characteristics[i][j][k]
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        <br />
    }

    <div ng-app="LocalCalculationResult" ng-controller="LocalCalculationResultCtrl">
        <div ng-repeat="chainsCharacteristics in characteristics">
            <h3>Matter {{chainsCharacteristics.matterName}}</h3>
            <table st-table="characteristics" class="table table-bordered table-hover" ng-cloak>
                <thead>
                <tr>
                    <th>
                        Sequence name
                    </th>
                    <th ng-repeat="characteristicName in characteristicNames" ng-bind="characteristicName"/>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="characteristic in chainsCharacteristics">
                    <td ng-bind="characteristic.matterName"/>
                    <td ng-repeat="value in characteristic.characteristics" ng-bind="value"/>
                </tr>
                </tbody>
            </table>

            <br/>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="firstCharacteristic">First characteristic:</label>
            <div class="col-md-10">
                <select class="form-control" title="First characteristic" ng-model="firstCharacteristic" ng-options="c.Text for c in characteristicsList" id="firstCharacteristic"></select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="secondCharacteristic">Second characteristic:</label>
            <div class="col-md-10">
                <select class="form-control" title="Second characteristic" ng-model="secondCharacteristic" ng-options="c.Text for c in characteristicsList" id="secondCharacteristic"></select>
            </div>
        </div>
        <br />
        <div class="form-group">
            <label class="control-label col-md-2" for="hight">Hight:</label>
            <div class="col-md-10">
                <input class="form-control" name="hight" id="hight" type="number" min="{{500 + legendHeight}}" step="20" ng-model="hight" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="width">Width:</label>
            <div class="col-md-10">
                <input class="form-control" name="width" id="width" type="number" min="{{400}}" step="20" ng-model="width" />
            </div>
        </div>
        <br />
        <input type="button" class="btn btn-default" ng-click="draw()" value="Draw" />
        <div id="chart">
        </div>
    </div>
    <br />

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryui")
    }
}
