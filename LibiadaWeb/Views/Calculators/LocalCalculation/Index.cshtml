@model dynamic

@{
    ViewBag.Title = "Local characteristics";
}

<h2>Local characteristics</h2>

<script type="text/javascript">
    "use strict";

    var data = @Html.Raw(Json.Encode(ViewBag.data));
</script>

@using (Html.BeginForm())
{
    <div ng-app="Calculation">
        <div class="form-horizontal" ng-controller="CalculationCtrl">
            <h4>Sequences and parameters</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Partial("_NatureSelect")
            @Html.Partial("_MattersTable")
            @Html.Partial("_Characteristics")
            <br />
            <div class="form-group">
                @Html.Label("length", "Window size", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class="form-control" name="length" type="number" value="50" min="1" />
                    @Html.ValidationMessage("length", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("step", "Step size", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class="form-control" name="step" type="number" value="1" min="1" />
                    @Html.ValidationMessage("step", "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.CheckBox("delta")
                    @Html.Label("delta", "Calculate difference between characteristics")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.CheckBox("growingWindow")
                    @Html.Label("growingWindow", "Growing window (start is fixed at 0 position)")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.CheckBox("fourier")
                    @Html.Label("fourier", "Calculate Fast fourier transform")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.CheckBox("autocorrelation")
                    @Html.Label("autocorrelation", "Calculate autocorrelation")
                </div>
            </div>
            <hr/>
            @Html.Partial("_MattersSubmit")
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/procedures")
    @Scripts.Render("~/bundles/controllers/calculation")
}