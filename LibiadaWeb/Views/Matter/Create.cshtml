        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.nature_id, "nature")
        </div>
        <div class="editor-field">
            @Html.DropDownList("nature_id", String.Empty)
            @Html.ValidationMessageFor(model => model.nature_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.description)
            @Html.ValidationMessageFor(model => model.description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.remote_db_id, "remote_db")
        </div>
        <div class="editor-field">
            @Html.DropDownList("remote_db_id", String.Empty)
            @Html.ValidationMessageFor(model => model.remote_db_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.id_in_remote_db)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.id_in_remote_db)
