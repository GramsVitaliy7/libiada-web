@model LibiadaWeb.matter

@{
    ViewBag.Title = "Объекты";
}

<h2>Создание</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "Matter", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Объект</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.name, "Название")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.name)
            @Html.ValidationMessageFor(model => model.name)
        </div>
         
        <input type="file" name="file" id="file"/>
        
        <div class="editor-label">
            <label>Форма записи цепочки</label>
        </div>
        <select name="notationId">
            @foreach (var option in ViewBag.notation_id)
            {
                <option value="@option.Value">@option.Text</option>
            }
        </select>

        <div class="editor-label">
            @Html.LabelFor(model => model.nature_id, "Природа объекта")
        </div>
        <div class="editor-field">
            @Html.DropDownList("nature_id", String.Empty)
            @Html.ValidationMessageFor(model => model.nature_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.description, "Описание")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.description)
            @Html.ValidationMessageFor(model => model.description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.remote_db_id, "Сторонняя БД")
        </div>
        <div class="editor-field">
            @Html.DropDownList("remote_db_id", String.Empty)
            @Html.ValidationMessageFor(model => model.remote_db_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.id_in_remote_db, "id в сторонней БД")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.id_in_remote_db)
            @Html.ValidationMessageFor(model => model.id_in_remote_db)
        </div>

        <p>
            <input type="submit" value="Создать" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Назад к списку", "Index")
</div>
