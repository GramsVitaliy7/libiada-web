@model LibiadaWeb.characteristic

@{
    ViewBag.Title = "Значения характеристик";
}

<h2>Редактирование</h2>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Значение характеристики</legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            @Html.LabelFor(model => model.chain_id, "Принадлежит цепочке")
        </div>
        <div class="editor-field">
            @Html.DropDownList("chain_id", String.Empty)
            @Html.ValidationMessageFor(model => model.chain_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.characteristic_type_id, "Характеристика")
        </div>
        <div class="editor-field">
            @Html.DropDownList("characteristic_type_id", String.Empty)
            @Html.ValidationMessageFor(model => model.characteristic_type_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.value, "Численное значение")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.value)
            @Html.ValidationMessageFor(model => model.value)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.value_string, "Стороковое зачение")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.value_string)
            @Html.ValidationMessageFor(model => model.value_string)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.link_up_id, "Привязка")
        </div>
        <div class="editor-field">
            @Html.DropDownList("link_up_id", String.Empty)
            @Html.ValidationMessageFor(model => model.link_up_id)
        </div>

        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Назад к списку", "Index")
</div>
