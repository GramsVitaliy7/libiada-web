@model LibiadaWeb.binary_characteristic

@{
    ViewBag.Title = "Характеристики бинарных цепей";
}

<h2>Редактирование</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Характеристика бинарных цепей</legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            @Html.LabelFor(model => model.chain_id, "Цепочка")
        </div>
        <div class="editor-field">
            @Html.DropDownList("chain_id", String.Empty)
            @Html.ValidationMessageFor(model => model.chain_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.characteristic_type_id, "Тип характеристики")
        </div>
        <div class="editor-field">
            @Html.DropDownList("characteristic_type_id", String.Empty)
            @Html.ValidationMessageFor(model => model.characteristic_type_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.value, "Значение")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.value)
            @Html.ValidationMessageFor(model => model.value)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.value_string, "Значение в виде строки")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.value_string)
            @Html.ValidationMessageFor(model => model.value_string)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.link_up_id, "Привязка")
        </div>
        <div class="editor-field">
            @Html.DropDownList("link_up_id", String.Empty)
            @Html.ValidationMessageFor(model => model.link_up_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.creation_date, "Дата создания")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.creation_date)
            @Html.ValidationMessageFor(model => model.creation_date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.first_element_id, "Первый элемент")
        </div>
        <div class="editor-field">
            @Html.DropDownList("first_element_id", String.Empty)
            @Html.ValidationMessageFor(model => model.first_element_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.second_element_id, "Второй элемент")
        </div>
        <div class="editor-field">
            @Html.DropDownList("second_element_id", String.Empty)
            @Html.ValidationMessageFor(model => model.second_element_id)
        </div>

        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Назад к списку", "Index")
</div>
