@using LibiadaWeb.Helpers
@model dynamic

@{
    ViewBag.Title = "Преобразование цепочек";
}

<h2>Преобразование цепочек</h2>

<script type="text/javascript">

    var formTable;

    $(document).ready(function () {
        formTable = $("table").dataTable({
            bJQueryUI: true,
            sPaginationType: "full_numbers"
        });

        $('form').submit(function () {
            $(formTable.fnGetHiddenNodes()).find('input:checked').attr("hidden", true).appendTo(this);
        });
    });
    
</script>

@using (Html.BeginForm())
{
    <table>
        <thead>
            <tr>
                <th>
                    Название объекта
                </th>
                <th>
                    Дата создания
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                List<MvcHtmlString> chainsList = Html.CheckBoxGroup("chainIds", (List<SelectListItem>) ViewBag.chainsList);

                for (int i = 0; i < chainsList.Count; i++)
                {
                    <tr>
                        <td>
                            @chainsList[i]
                        </td>
                        <td>
                            @ViewBag.chains[i].creation_date
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <br/>
    @Html.CheckBox("toAmino", "Преобразовать в аминокислоты", null)
    <br/>
    <input type="submit" value="Преобразовать" />
}